<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/TitleLot1"
        android:layout_width="331dp"
        android:layout_height="70dp"
        android:layout_marginStart="39dp"
        android:layout_marginTop="41dp"
        android:text="The closest parking lot is"
        android:textColor="#000000"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="160dp"
        android:layout_marginTop="64dp"
        android:onClick="back"
        android:text="Back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="408dp"
        android:layout_height="301dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TitleLot1"
        app:srcCompat="@drawable/library_lot2" />

    <TextView
        android:id="@+id/lot2space1"
        android:layout_width="44dp"
        android:layout_height="57dp"
        android:layout_marginStart="128dp"
        android:layout_marginTop="116dp"
        android:text="1"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TitleLot1" />

    <TextView
        android:id="@+id/lot2space2"
        android:layout_width="52dp"
        android:layout_height="57dp"
        android:layout_marginStart="3dp"
        android:layout_marginTop="116dp"
        android:text="2"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:gravity="center"
        app:layout_constraintStart_toEndOf="@+id/lot2space1"
        app:layout_constraintTop_toBottomOf="@+id/TitleLot1" />

    <TextView
        android:id="@+id/lot2space3"
        android:layout_width="46dp"
        android:layout_height="57dp"
        android:layout_marginStart="3dp"
        android:layout_marginTop="116dp"
        android:text="3"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:gravity="center"
        app:layout_constraintStart_toEndOf="@+id/lot2space2"
        app:layout_constraintTop_toBottomOf="@+id/TitleLot1" />

</androidx.constraintlayout.widget.ConstraintLayout>